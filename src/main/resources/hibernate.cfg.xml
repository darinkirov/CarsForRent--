<?xml version = "1.0" encoding = "utf-8"?>
        <!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>

    <property name = "hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name = "hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name = "hibernate.connection.url">jdbc:postgresql://localhost:5432/carhire-postgresql</property>
    <property name = "hibernate.connection.username">postgres</property>
    <property name = "hibernate.connection.password">password</property>
    <property name = "hibernate.show_sql">true</property>
    <property name = "hibernate.hbm2ddl.auto">update</property>

    <mapping class = "com.carhiring.carhiring.data.entities.User"/>
    <mapping class = "com.carhiring.carhiring.data.entities.Role"/>
    <mapping class = "com.carhiring.carhiring.data.entities.Company"/>
    <mapping class = "com.carhiring.carhiring.data.entities.Client"/>
    <mapping class = "com.carhiring.carhiring.data.entities.Operator"/>
    <mapping class = "com.carhiring.carhiring.data.entities.CarRentalCompany"/>
    <mapping class = "com.carhiring.carhiring.data.entities.Car"/>
    <mapping class = "com.carhiring.carhiring.data.entities.CarCategory"/>
    <mapping class = "com.carhiring.carhiring.data.entities.CarClass"/>
    <mapping class = "com.carhiring.carhiring.data.entities.CarRental"/>
    <mapping class = "com.carhiring.carhiring.data.entities.RentalStatus"/>
</session-factory>
</hibernate-configuration>