<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.carhiring.carhiring.presentation.controllers.AddUserController">
    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Add User"/>
        <GridPane hgap="10" vgap="10">
            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="usernameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Save" fx:id="saveButton" onAction="#handleSave"/>
            <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>
